@model vp_server.Models.ViewModels.ManufacturerM
@{   
    ViewBag.NamePage = "Добавление производителя";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
    <body>
        <div class="main">
            <div class="container">
                <div class="marga">
                    <div class="row">
                        <div class="col-3">
                            <form method="get">
                                <p>
                                <label class="form-label">Название производителя</label>
                                @Html.TextBox("name", null, "text", new { @class = "form-control" })
                                </p>
                                <p>
                                <input type="submit" class="btn btn-primary" value="Поиск" />
                                </p>                                 
                            </form>
                        </div>
                        <div class="col-4">
                        @using (Html.BeginForm("CreateManufacturer", "Home", FormMethod.Post))
                        {
                            <p>
                                <label class="form-label">Название производителя:</label>
                                <input type="text" asp-for="manufacturer.Title" class="form-control" />
                                <span asp-validation-for="manufacturer.Title" />
                            </p>
                            <p>
                                <input type="submit" class="btn btn-primary" value="Записать" />
                            </p>
                        }
                        </div>
                    
                    </div>
                    <div class="row">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Название производителя</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in Model.manufacturerList)
                            {
                                <tr>
                                    <td>@m.Id</td>
                                    @using (Html.BeginForm("RenameManufacturer", "Home", FormMethod.Post))
                                    {
                                        <td>
                                            <input type="text" name="name" class="form-control" value="@m.Title"/>
                                            <input type="number" name="id" value="@m.Id" hidden="hidden" />
                                            </td>
                                        <td><input type="submit" class="btn btn-primary" value="Обновить" /></td>
                                    }                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                    </div>             
                </div>
            </div>
        </div>
    </body>
</html>
<script src="~/js/jquery.js"></script>
<script src="~/js/jquery.validate.min.js"></script>
<script src="~/js/jquery.validate.unobtrusive.min.js"></script>
<link href="~/css/DocsSheet.css" rel="stylesheet" />